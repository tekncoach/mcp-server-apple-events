    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
